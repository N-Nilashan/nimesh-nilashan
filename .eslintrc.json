{
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",  // Disable the rule that causes issues with `any`
    "prefer-const": "off",  // Disable the rule that causes issues with reassigning variables
    "react-hooks/exhaustive-deps": "off"  // Disable the React Hooks dependency rule
  }
}
